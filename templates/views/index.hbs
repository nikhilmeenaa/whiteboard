<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/all.css">
    <link rel="stylesheet" href="css/all.min.css">
    <script src="js/all.js"></script>
    <script src="js/all.min.js"></script>
    <link rel="stylesheet" href="style.css">

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
        crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
</head>

<body>
    <div class="header">

        <div onclick="panToggle(modes.pan)" class="hover">
            <img src="./hold.png" alt="">
        </div>

        <div class="drawing hover" onclick="panToggle(modes.drawing)">
            <img src="./anotherPen.png" alt="">
        </div>

        <div class="sizeSelect hover">
            <select name="" id="penSize" onchange="changeOption(event)" value='3'>

                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3" selected>3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>

            </select>
        </div>

        <div onclick="panToggle(modes.default)" class="hover">
            <img src=/cursor.png" alt="">
        </div>

        <div class="rubber hover" id="eraser" onclick="panToggle(modes.eraser)">
            <img src=/eraser.png" alt="">
        </div>

        <div class="eraserContainer">
            <div class="rubber" onclick="panToggle(modes.a1)">
                <img src="new/moon.png" id="eraser1" alt="">
            </div>

            <div class="rubber" onclick="panToggle(modes.a2)">
                <img src="new/moon.png" id="eraser2" alt="">
            </div>

            <div class="rubber" onclick="panToggle(modes.a3)">
                <img src="new/moon.png" id="eraser3" alt="">
            </div>

            <div class="rubber" onclick="panToggle(modes.a4)">
                <img src="new/moon.png" id="eraser4" alt="">
            </div>

            <div class="rubber" onclick="panToggle(modes.a5)">
                <img src="new/moon.png" id="eraser5" alt="">
            </div>

        </div>

        <div id="undoButton" onclick="doUndo()">
            <button>Undo</button>
        </div>

        <div id="redoButton" onclick="doRedo()">
            <button>Redo</button>
        </div>

        <div id="troubleButton" onclick="troubleShoot()">
            <button>troubleShoot</button>
        </div>

        <div class="hover">
            <input type="color" id="colorPicker" value="#FF3399">
        </div>

        <div class="hover">
            <input type="color" id="bgColorPicker" value="#FFFFFF">
        </div>

        <div class="hover">
            <button onclick="saveState()">Save</button>
        </div>

    </div>
    <canvas id="canvas"></canvas>
</body>




<script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/2.4.4/fabric.min.js"></script>
<script src="app.js"></script>

</html>